<Page
    x:Class="SDKTemplate.Views.Espace_Prof.AddPeriod"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SDKTemplate.Views.Espace_Prof"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20" Padding="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.4*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="PrintCanvas" Opacity="0"/>
        <TextBox x:Name="SessionId" Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="0" TextWrapping="Wrap" VerticalAlignment="Center" Height="50" FontSize="20" InputScope="PersonalFullName" PlaceholderText="Session-id"/>
        <TextBlock HorizontalAlignment="Left" Text="Session-id :" TextWrapping="Wrap" VerticalAlignment="Center" UseLayoutRounding="True" FontSize="30"   Style="{StaticResource BodyTextBlockStyle}" Grid.ColumnSpan="2" />
        <DatePicker x:Name="Date" Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Center" Height="50" FontSize="20" />
        <TextBlock HorizontalAlignment="Left" Text="Date :" TextWrapping="Wrap" VerticalAlignment="Center" UseLayoutRounding="True" FontSize="30"   Style="{StaticResource BodyTextBlockStyle}" Grid.Row="1"/>
        <TimePicker ClockIdentifier="24HourClock" x:Name="Time" Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="2" VerticalAlignment="Center" Height="50" FontSize="20" />
        <TextBlock HorizontalAlignment="Left" Text="Temps :" TextWrapping="Wrap" VerticalAlignment="Center" UseLayoutRounding="True" FontSize="30"   Style="{StaticResource BodyTextBlockStyle}" Grid.Row="2"/>
        <Button x:Name="Continuer" Click="Continuer_Click" Grid.Row="3" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Center" Grid.ColumnSpan="2" Width="300" Height="45" Content="Continuer"/>

    </Grid>
</Page>
