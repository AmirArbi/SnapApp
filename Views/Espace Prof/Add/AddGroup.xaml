<Page
    x:Class="SDKTemplate.Views.Espace_Prof.AddGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SDKTemplate.Views.Espace_Prof"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Height="400" Margin="0,1,0,0" Padding="0,0,0,0" HorizontalAlignment="Center" Width="864">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="PrintCanvas" Opacity="0"/>
        <TextBox x:Name="GroupName" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="0" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="450" Height="50" FontSize="20" InputScope="PersonalFullName" PlaceholderText="Nom de group"/>

        <TextBlock HorizontalAlignment="Left" Text="Nom de Group :" TextWrapping="Wrap" VerticalAlignment="Center" UseLayoutRounding="True" FontSize="50" Height="79" Width="364"  Style="{StaticResource BodyTextBlockStyle}" Grid.ColumnSpan="2" />

        <TextBox x:Name="Level" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="450" Height="50" FontSize="20" InputScope="PersonalFullName" PlaceholderText="Niveau"/>
        <TextBlock HorizontalAlignment="Left" Text="Niveau :" TextWrapping="Wrap" VerticalAlignment="Center" UseLayoutRounding="True" FontSize="50" Height="79" Width="186"  Style="{StaticResource BodyTextBlockStyle}" Grid.Row="1"/>
        <Button x:Name="Continuer" Click="Continuer_ClickAsync" Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Center" Grid.ColumnSpan="2" Width="300" Height="45" Content="Continuer"/>

    </Grid>
</Page>
