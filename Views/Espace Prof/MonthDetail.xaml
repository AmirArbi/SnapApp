<Page
    x:Class="SDKTemplate.Views.Espace_Prof.MonthDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SDKTemplate.Views.Espace_Prof"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:data="using:SDKTemplate.Models"
    xmlns:viewmodel="using:SDKTemplate.ViewModels"
    Loaded="Page_LoadedAsync"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid x:Name="Months" BorderThickness="2" BorderBrush="{StaticResource ContentDialogBorderThemeBrush}" Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Margin="110,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock  Text="Séance Info" Style="{StaticResource TitleTextBlockStyle}" FontSize="25" Grid.Column="0"></TextBlock>
                <Button Click="Button_Click" FontSize="25" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top"  Margin="0,-10,50,0">
                    <TextBlock Text="Modifier la periode" FontSize="15"></TextBlock>
                </Button>
            </Grid>
            <Frame Height="2" Background="#707070"  VerticalAlignment="Bottom" Margin="100,0,50,0"></Frame>


            <GridView x:Name="FilteredListView"
                      Grid.Row="1"
                      ItemsSource="{x:Bind sessions}" 
                      IsItemClickEnabled="True" 
                      ItemClick="FilteredListView_ItemClick"
                      Margin="10,0,10,0"
                      >
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid x:Name="MaxItemsWrapGrid"
                           MaximumRowsOrColumns="1"
                                       Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="data:GroupSession">

                        <StackPanel x:Name="panel" Height="100" Width="1250" HorizontalAlignment="Stretch" Margin="0,0,0,0"  Orientation="Horizontal" Loaded="panel_Loaded">
                            <Grid Height="100" Width="1250" Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3.8*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <Image VerticalAlignment="Top" Source="/Images/SessionIcon.png" Width="50" Margin="30,10,20,10"></Image>
                                    <StackPanel >
                                        <TextBlock VerticalAlignment="Top" Style="{ThemeResource BaseTextBlockStyle}" FontSize="25" Margin="0,0,0,5">
                                            <Run Text="Séance numéro :"></Run>
                                            <Run Text="{x:Bind session_id}"></Run>
                                        </TextBlock>
                                        <TextBlock VerticalAlignment="Top"  Style="{ThemeResource BaseTextBlockStyle}" FontSize="20" Margin="0,0,0,5">
                                            <Run Text="Date :"></Run>
                                            <Run Text="{x:Bind Date}"></Run>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>

            </GridView>

        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="Exist" Grid.Column="1" Click="Exist_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{ThemeResource AccentButtonStyle}" Height="60" FontSize="30">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Fermer"></TextBlock>
            </Button>
            <Frame BorderBrush="{StaticResource ContentDialogBorderThemeBrush}" BorderThickness="2"  Grid.Row="1" Grid.Column="1" x:Name="Add" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="0,0,5,5"/>
        </Grid>
    </Grid>
</Page>
