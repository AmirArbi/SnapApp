<Page
    x:Class="SDKTemplate.Views.Espace_Prof.ProfSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:SDKTemplate.Models"
    mc:Ignorable="d" Loaded="Page_LoadedAsync"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <AutoSuggestBox PlaceholderText="Entrez un Prof" 
            TextChanged="AutoSuggestBox_TextChanged"
            QueryIcon="Find"
            QuerySubmitted="AutoSuggestBox_QuerySubmitted"
             HorizontalAlignment="Center"
             Margin="50"
             Width="500"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Image  x:Name="ProfImage"/>




            <GridView x:Name="FilteredListView"
                      Grid.Row="1"
                      Margin="20,10,20,10"  
                      Loaded="FilteredListView_Loaded"
                      ItemsSource="{x:Bind accounts}"     
                      IsItemClickEnabled="True"
                      ItemClick="FilteredListView_ItemClick"
                      HorizontalAlignment="Center"
                >
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="data:ProfAccount">

                        <StackPanel x:Name="panel" Height="180" Width="420" Loaded="panel_Loaded">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Images/enseignant.png" Width="40" Margin="30,25,20,10"></Image>
                                <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Margin="0,45,0,5">      
                                    <Run Text="{x:Bind Name}" FontSize="21"></Run>
                                    <Run Text="{x:Bind Surname}" FontSize="21"></Run>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"  Margin="30,5,0,5">
                                <TextBlock Text="Matiére : *" x:Name="Subject"    Style="{ThemeResource BodyTextBlockStyle}" FontSize="21"></TextBlock>
                                <TextBlock Text="{x:Bind Subject}"  Style="{ThemeResource BodyTextBlockStyle}" FontSize="21"></TextBlock>
                            </StackPanel>


                            <StackPanel Orientation="Horizontal"  Margin="30,5,0,5">
                                <TextBlock Text="Formule : *" x:Name="Formule"   Style="{ThemeResource BodyTextBlockStyle}" FontSize="21"></TextBlock>
                                <TextBlock Text="{x:Bind Formule}"  Style="{ThemeResource BodyTextBlockStyle}" FontSize="21"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>

            </GridView>
        </Grid>

    </Grid>
</Page>
