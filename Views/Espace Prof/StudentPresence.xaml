<Page
    x:Class="SDKTemplate.Views.Espace_Prof.Add.StudentPresence"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SDKTemplate.Views.Espace_Prof.Add"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:data="using:SDKTemplate.Models"
    xmlns:viewmodel="using:SDKTemplate.ViewModels"
    Loaded="Page_Loaded"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="Student" BorderThickness="2" BorderBrush="{StaticResource ContentDialogBorderThemeBrush}" Grid.Row="1" Margin="20,0,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4.2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5.5*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Height="100" Margin="120,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock  Text="Nom et Prénom" Style="{StaticResource TitleTextBlockStyle}" FontSize="25" Grid.Column="0"></TextBlock>
            <TextBlock  Text="Presence" Style="{StaticResource TitleTextBlockStyle}" FontSize="25" Grid.Column="1"></TextBlock>
        </Grid>
        <Frame Height="2" Background="#707070"  VerticalAlignment="Bottom" Margin="100,0,50,0"></Frame>


        <GridView x:Name="FilteredListView"
                      Grid.Row="1"
                      ItemsSource="{x:Bind StudentPresences}" 
                      IsItemClickEnabled="False" 
                      Grid.RowSpan="2"
                      SelectionMode="None"
                      >
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid x:Name="MaxItemsWrapGrid"
                           MaximumRowsOrColumns="1"
                                       Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="data:GroupSession">

                    <StackPanel x:Name="panel" Height="100" Width="1450" Margin="0,0,0,0"  Orientation="Horizontal" >
                        <Grid Height="100" Width="1080" Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <Image VerticalAlignment="Top" Source="/Images/Student.png" Width="50" Margin="30,0,20,10"></Image>
                                <StackPanel >
                                    <TextBlock VerticalAlignment="Top" Style="{ThemeResource BaseTextBlockStyle}" FontSize="25" Margin="0,0,0,5">
                                            <Run Text="{x:Bind Name}"></Run>
                                            <Run Text="{x:Bind Surname}"></Run>
                                    </TextBlock>
                                    <TextBlock VerticalAlignment="Top" Text="{x:Bind School}" Style="{ThemeResource BaseTextBlockStyle}" FontSize="20" Margin="0,0,0,5"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <ToggleButton Name="{x:Bind StudentName}" IsChecked="{x:Bind IsPresent}" Click="ToggleButton_Click" Content="Present" Margin="0,10,0,0" Style="{StaticResource ToggleButtonRevealStyle}" Width="100" Grid.Column="1" VerticalAlignment="Top"/>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>

        </GridView>
        <StackPanel Grid.RowSpan="2" Margin="10" HorizontalAlignment="Stretch" Background="#171717" BorderBrush="#707070" BorderThickness="1" Grid.Column="1" >
            <TextBlock Text="Recherche :" Margin="20" Style="{StaticResource HeaderTextBlockStyle}" FontSize="20"></TextBlock>
            <AutoSuggestBox x:Name="Name" PlaceholderText="Nom" Margin="20,0,20,0" ></AutoSuggestBox>
            <AutoSuggestBox x:Name="Surname" PlaceholderText="Prénom" Margin="20,30,20,0" ></AutoSuggestBox>
            <AutoSuggestBox  x:Name="School" PlaceholderText="Lycée" Margin="20,30,20,0" ></AutoSuggestBox>
            <StackPanel Orientation="Horizontal" Margin="20,30,5,0">
                <TextBlock Text="Tout est présent :" Style="{StaticResource HeaderTextBlockStyle}" FontSize="20"></TextBlock>
                <CheckBox Margin="10,0,0,0" Checked="CheckBox_Checked" ></CheckBox>
            </StackPanel>
            <StackPanel Margin="20,30,20,0">
                <TextBlock Text="Modifier la séance :" Style="{StaticResource HeaderTextBlockStyle}" FontSize="20"></TextBlock>
                <Button Margin="0,10,0,0" HorizontalAlignment="Stretch" Content="Modifier" Click="Button_Click_1"></Button>
            </StackPanel>
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="3" HorizontalAlignment="Stretch" Margin="15,0,15,10" Click="Button_Click" Content="Confirmer" Style="{StaticResource AccentButtonStyle}"></Button>
    </Grid>
</Page>
