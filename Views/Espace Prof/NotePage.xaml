<Page
    x:Class="SDKTemplate.Views.Espace_Prof.NotePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SDKTemplate.Views.Espace_Prof"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="15" VerticalAlignment="Stretch" >
        <RelativePanel Margin="0,0,0,0" HorizontalAlignment="Stretch">
            <RelativePanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0,0,0,0" />
                </Style>
            </RelativePanel.Resources>
            <Button  x:Name="openFileButton" Click="openFileButton_Click" AutomationProperties.Name="Save file" ToolTipService.ToolTip="Save file">
                <Button.Content>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74E;"/>
                </Button.Content>
            </Button>
            <Button x:Name="Back" Click="Back_Click"
                   RelativePanel.AlignRightWithPanel="True">
                <Button.Content>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE845;"/>
                </Button.Content>
            </Button>
        </RelativePanel>
        <TextBox x:Name="editor" VerticalAlignment="Stretch" AutomationProperties.Name="Custom editor" Margin="0,30,0,10"
                    RelativePanel.Below="openFileButton"
                    AcceptsReturn="True" TextWrapping="Wrap"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"/>
    </Grid>
</Page>
